#include <iostream>
using namespace std;

int main() {
    int N,i;
    float S = 0; 
    cout << "Ingrese N: ";
    cin >> N;

    for ( i = 1; i <= N; i++) {
        if (i % 2 == 0) {
            S = S-i;
        }
        else {
            S=S+i;
        }


    cout << "La suma es:  " << S<< endl;
    return 0;
}
