#include <iostream>
#include <cmath>
using namespace std; 
float vol_cilindro(float r, float a) {
    float V;
    V = 3.1415 * pow(r, 2) * a;
    return V;
}


int main()
{
    float radio, altura, volumen; 
    cout << "Ingrese el radio: ";
    cin >> radio; 
    cout << "Ingrese la altura: "; 
    cin >> altura; 
    volumen = vol_cilindro(radio, altura);
    cout << "El volumen del cilindro es: " << volumen << endl; 

}

